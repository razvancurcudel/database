{
	"name" : "koolkode/database",
	"description" : "KoolKode Database Connections",
	"keywords" : [
		"koolkode",
		"database"
	],
	"type" : "library",
	"license" : "MIT",
	"homepage" : "https://github.com/koolkode/database",
	"authors" : [{
			"name" : "Martin SchrÃ¶der",
			"email" : "m.schroeder2007@gmail.com"
		}
	],
	"minimum-stability" : "dev",
	"require" : {
		"php" : ">=5.5.0",
		"koolkode/config" : "~0.1",
		"koolkode/util" : "~0.1",
		"symfony/console" : "~2"
	},
	"require-dev" : {
		"phpunit/phpunit" : "4.*",
		"koolkode/transaction" : "dev-master",
		"koolkode/stream" : "~0.1",
		"psr/log" : "~1.0",
		"doctrine/dbal" : "~2"
	},
	"suggest" : {
		"koolkode/stream" : "Adds support for streaming LOBs to the database.",
		"koolkode/transaction" : "Allows for externally managed transactions.",
		"koolkode/util" : "Adds support for automated conversion of UUID params into appropriate DB values.",
		"psr/log" : "Enables query logging and auto-explain in debug mode."
	},
	"autoload" : {
		"psr-4" : {
			"KoolKode\\Database\\" : "src/"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"KoolKode\\Database\\" : "test/src/"
		}
	},
	"bin" : [
		"bin/kkdb"
	],
	"extra" : {
		"branch-alias" : {
			"dev-master" : "0.1.x-dev"
		}
	}
}